<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:background="@drawable/bg_alert_dialog_rounded"
       android:layout_width="264dp"
       android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/imageView3"
           android:layout_width="72dp"
           android:layout_height="72dp"
           android:layout_marginTop="40dp"
           android:background="@null"
           android:src="@drawable/ic_check_circle"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/title"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:layout_marginEnd="16dp"

           android:text="Subscribed"
           android:textColor="@color/my_sdk_color_black"
           android:gravity="center_horizontal"
           android:textFontWeight="600"
           android:textSize="24sp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/imageView3" />

       <TextView
           android:id="@+id/desc"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:layout_marginEnd="16dp"
           android:textColor="@color/my_sdk_color_black"
           android:text="Congratulations,successfully subscribed To Shadin music plan"
           android:gravity="center_horizontal"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/title" />

       <TextView
           android:id="@+id/close"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="44dp"
           android:layout_marginEnd="16dp"
           android:layout_marginBottom="22dp"
           android:gravity="center_horizontal"
           android:text="Close"
           android:textColor="@color/my_sdk_color_primary"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/desc" />



   </androidx.constraintlayout.widget.ConstraintLayout>
